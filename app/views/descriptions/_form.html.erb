
<% if @description.errors.any? %>
	<h2>Errors:</h2>
	<ul>
		<% @description.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>	
<% end %>	


<%= form_for @description do |f| %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title, placeholder: "title" %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>	