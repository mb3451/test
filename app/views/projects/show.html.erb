<div class="row">
	<div class="col-sm-12">
		<div class="col-sm-6">
			<h1>Project</h1>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-sm-6">
		<table class="table table-hover">
			<tr>
				<th>Name</th>
				<th colspan=3>Actions</th>
			</tr>
			<tr>
				<td><%= @project.name %></td>
				<td><%= link_to "Edit", edit_project_path(@project), class: "btn btn-warning" %></td>
				<td><%= link_to "Show Features", project_features_path(@project), class: "btn btn-info", remote: true, id: "btn-show" %>
					
				</td>
				<td>
					<%= link_to 'Delete', project_path(@project), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
				</td>
			</tr>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-sm-12">
		<div class="col-sm-6">
			<h2>Team</h2>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-sm-6">
		<table class="table table-hover">
			<tr>
				<th>Name</th>
				<th>Actions</th>
			</tr>
			<% @project.users.each do |d| %>
			<tr>
				<td><%= d.name %></td>
			</tr>
			<% end %>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
 		<div id="features_div" >
 		</div>
 	</div>

</div>
