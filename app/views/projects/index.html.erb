<div class="row">
	<div class="col-sm-12">
		<div class="col-sm-6">
			<h1>List</h1>
		</div>
		<div class="col-sm-6">
			<%= link_to "New Project", new_project_path, class: "btn btn-success" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-sm-12"><br>
		<table class="table table-hover">
		<tr>
			<th>
				Title
			</th>
			<th>
				Manager
			</th>
			<th>
				Created
			</th>
			<th colspan=4>
				Actions
			</th>
			
		</tr>
			<% @projects.each do |d| %>
			<tr>
				<td>
					<%= d.name %>
				</td>
				<td>
					<%= d.manager.name %>
				</td>
				<td>
					<%= time_ago_in_words(d.created_at) %> ago
				</td>
				<td>
					<%= link_to 'Features', project_features_path(d), class: "btn btn-info" %>
				</td>
				<td>
					<%= link_to 'Edit', edit_project_path(d), class: "btn btn-warning" %>
				</td>
				<td>
					<%= link_to 'Show', project_path(d), class: "btn btn-info" %>
				</td>
				<td>
					<%= link_to 'Delete', project_path(d), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
				</td>
			</tr>
			<% end %>
	</table>
	</div>
</div>
